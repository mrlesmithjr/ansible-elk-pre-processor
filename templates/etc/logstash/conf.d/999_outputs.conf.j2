# {{ ansible_managed }}
#
{% if logstash_outputs is defined %}
{%   for item in logstash_outputs %}
output {
  {{ item.output }} {
{%     if item.host is defined %}
    host => "{{ item.host }}"
{%     endif %}
{%     if item.output == "redis" %}
    data_type => "list"
    key => "logstash"
{%     endif %}
{%     if item.output == "rabbitmq" %}
    exchange => "{{ item.exchange }}"
    exchange_type => "{{ item.exchange_type }}"
{%     endif %}
  }
}
{%   endfor %}
{% endif %}
